@using SecureAndObserve.Core.Domain.Entities
@model EquipmentClaims
@{
    ViewBag.Title = "Guard - Unpin equipment";
    ViewBag.CurrentUrl = "~/Guard/UnpinEquipment";
}

<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Guard Page</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">My equipment</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Unpin equipment</span>
        </div>
    </div>
</div>



<div class="form-container">
    <a asp-controller="Guard" asp-action="MyEquipment" class="link-hover">Back to my equipment list</a>
    <h2 class="text-large">Equipment details</h2>
    <h3>Are you sure to delete this order?</h3>
    <form asp-controller="Guard" asp-action="UnpinEquipment" method="post">
        <input type="hidden" asp-for="Id"></input>
        <input type="hidden" asp-for="EquipmentId"></input>
        <input type="hidden" asp-for="GuardExstensionsId"></input>
        @*Name*@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt">Name</label>
            </div>
            <div class="flex-1">
                <input class="form-input" disabled="disabled" value="@ViewBag.Name" />
                <span class="text-red"></span>
            </div>
        </div>
        @*Type*@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt">Type</label>
            </div>
            <div class="flex-1">
                <input class="form-input" disabled="disabled" value="@ViewBag.Type" />
                <span class="text-red"></span>
            </div>
        </div>
        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-red-back">Unpin from order</button>
                <div asp-validation-summary="All" class="text-red"></div>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
 
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}